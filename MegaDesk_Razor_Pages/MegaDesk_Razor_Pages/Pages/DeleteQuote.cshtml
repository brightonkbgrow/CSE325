@page "{id:int}"
@model MegaDesk_Razor_Pages.Pages.DeleteQuoteModel

<h2>Delete Quote</h2>


<p>Are you sure you want to delete this quote?</p>

<form method="post">
    <input type="hidden" asp-for="Quote.Id" />
    <button type="submit" class="btn btn-secondary">Delete</button>
    <a asp-page="./ViewQuotes" class="btn btn-secondary">Cancel</a>

</form>
